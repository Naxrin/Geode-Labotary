{
    "geode": "3.0.0-beta.1",
    "gd": {"win":"2.206"},
    "version": "v2.1.0-beta.1",
    "id": "cgytrus.menu-shaders",
    "name": "Menu Shaders",
    "developer": "mat & ConfiG & Naxrin",
    "description": "Replaces the background of the main menu with a custom shader, which can be customized.",
    "repository": "https://github.com/cgytrus/MenuShaders",
    "issues": {
        "info": "Report any issues you have on GitHub issues.",
        "url": "https://github.com/cgytrus/MenuShaders/issues"
    },
    "tags": [ "Cosmetic" ],
    "resources": {
        "files": [
            "resources/shaders/*.glsl"
        ]
    },
    "settings": {
        "show-main": {
            "name": "Show in main menu",
            "description": "MenuLayer",
            "type": "bool",
            "default": true
        },
        "show-level-select": {
            "name": "Show in level select menu",
            "description": "LevelSelectLayer",
            "type": "bool",
            "default": false
        },
        "show-creator": {
            "name": "Show in creator menu",
            "description": "CreatorLayer",
            "type": "bool",
            "default": false
        },
        "show-level-browser": {
            "name": "Show in level lists",
            "description": "Hall of Fame, Featured, Saved, etc. (LevelBrowserLayer)",
            "type": "bool",
            "default": false
        },
        "show-edit-level": {
            "name": "Show in edit level menu",
            "description": "EditLevelLayer",
            "type": "bool",
            "default": false
        },
        "show-play-level": {
            "name": "Show in play level menu",
            "description": "LevelInfoLayer",
            "type": "bool",
            "default": false
        },
        "show-garage": {
            "name": "Show in icon select menu",
            "description": "GJGarageLayer",
            "type": "bool",
            "default": false
        },
        "show-search": {
            "name": "Show in search filters menu",
            "description": "LevelSearchLayer",
            "type": "bool",
            "default": false
        },
        "show-leaderboard": {
            "name": "Show in leaderboards menu",
            "description": "LeaderboardsLayer",
            "type": "bool",
            "default": false
        },
        "show-level-list": {
            "name": "Show in level list menu",
            "description": "LevelListLayer",
            "type": "bool",
            "default": false
        },
        "show-gauntlet-select": {
            "name": "Show in gauntlet select menu",
            "description": "GauntletSelectLayer",
            "type": "bool",
            "default": false
        },
        "show-gauntlet-map": {
            "name": "Show in gauntlet map menu",
            "description": "GauntletLayer",
            "type": "bool",
            "default": false
        }
    }
}
